{
  "manifest_version": 3,
  "name": "Image Blackout Toggle",
  "version": "1.0",
  "description": "ウェブページの画像を黒色に切り替えるChrome拡張機能",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "settings.html",
    "default_title": "Image Blackout Toggle"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "image/1.jpg",
        "image/2.jpg",
        "image/3.jpg",
        "image/4.jpg",
        "image/5.jpg",
        "image/6.jpg",
        "image/7.jpg",
        "image/8.jpg",
        "image/9.jpg",
        "image/10.jpg",
        "image/11.jpg",
        "image/12.jpg",
        "image/13.jpg",
        "image/14.jpg",
        "image/15.jpg",
        "image/16.jpg",
        "image/17.jpg",
        "image/18.jpg",
        "image/19.jpg",
        "image/20.jpg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
