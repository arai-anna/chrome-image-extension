{
  "manifest_version": 3,
  "name": "Image Blackout Toggle",
  "version": "1.0",
  "description": "ウェブページの画像を黒色に切り替えるChrome拡張機能",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Image Blackout Toggle"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
